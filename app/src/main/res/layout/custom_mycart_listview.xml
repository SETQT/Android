<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:id="@+id/custom_mycart_listview_bg_mycart"
        android:layout_width="363dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/mycart_custom_listview_bg_mycart" />

    <ImageView
        android:id="@+id/custom_mycart_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="18dp" />

    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="120dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_mycart_name_product"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:text="Áo khoác Mono cực chất lượng"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/custom_mycart_icon_garbage"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_garbage" />

        <TextView
            android:id="@+id/custom_mycart_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:text="Size: S"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/custom_mycart_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:text="Màu sắc: Đỏ đậm"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/custom_mycart_old_cost_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="74dp"
            android:foreground="@drawable/dashboard_custom_gridview_strikethrough"
            android:gravity="center"
            android:text="đ500.000"
            android:textColor="#AEAEAE"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/custom_mycart_new_cost_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="92dp"
            android:gravity="top"
            android:text="đ100.000"
            android:textColor="#F9A826"
            android:textSize="12sp" />

        <View
            android:id="@+id/custom_mycart_listview_circle_decrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="89dp"
            android:background="@drawable/mycart_custom_listview_circle_decrease" />

        <Button
            android:id="@+id/custom_mycart_icon_decrease"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="93dp"
            android:background="@drawable/icon_decrease"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/custom_mycart_number_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="89dp"
            android:gravity="center"
            android:text="01"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/custom_mycart_listview_circle_increase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="89dp"
            android:background="@drawable/mycart_custom_listview_circle_increase" />

        <Button
            android:id="@+id/custom_mycart_icon_increase"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="93dp"
            android:background="@drawable/icon_increase"
            android:backgroundTint="#FFFFFF" />

        <CheckBox
            android:id="@+id/custom_mycart_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="85dp" />

    </RelativeLayout>
</RelativeLayout>