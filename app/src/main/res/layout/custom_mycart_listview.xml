<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
>

    <View
        android:id="@+id/custom_mycart_listview_bg_mycart"
        android:layout_width="358dp"
        android:layout_height="108dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mycart_custom_listview_bg_mycart" />

    <ImageView
        android:id="@+id/custom_mycart_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="110dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_mycart_name_product"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:text="Áo khoác Mono cực chất lượng"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/custom_mycart_icon_garbage"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/icon_garbage" />


        <TextView
            android:id="@+id/custom_mycart_old_cost_product"
            android:layout_width="47dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:foreground="@drawable/dashboard_custom_gridview_strikethrough"
            android:gravity="center"
            android:text="đ500.000"
            android:textColor="#AEAEAE"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/custom_mycart_new_cost_product"
            android:layout_width="55dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:gravity="top"
            android:text="đ100.000"
            android:textColor="#F9A826"
            android:textSize="12sp" />

        <View
            android:id="@+id/custom_mycart_listview_circle_decrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="79dp"
            android:background="@drawable/mycart_custom_listview_circle_decrease" />

        <View
            android:id="@+id/custom_mycart_icon_decrease"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="83dp"
            android:background="@drawable/icon_decrease"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/custom_mycart_number_product"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="79dp"
            android:gravity="center"
            android:text="01"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/custom_mycart_listview_circle_increase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="79dp"
            android:background="@drawable/mycart_custom_listview_circle_increase" />

        <View
            android:id="@+id/custom_mycart_icon_increase"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="83dp"
            android:background="@drawable/icon_increase"
            android:backgroundTint="#FFFFFF" />

        <View
            android:id="@+id/custom_mycart_listview_bg_black"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/mycart_custom_listview_bg_black" />

        <View
            android:id="@+id/custom_mycart_icon_done"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="82dp"
            android:background="@drawable/icon_done"
            android:backgroundTint="#FFFFFF" />

    </RelativeLayout>


</RelativeLayout>