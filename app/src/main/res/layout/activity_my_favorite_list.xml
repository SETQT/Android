<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/custom_voucher_layout_fragment_first"
    android:background="#E5E5E5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/record_rectangle_header_profile"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/record_rectangle_header_profile" />

        <View
            android:id="@+id/icon_back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_back"
            android:backgroundTint="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:text="Danh sách yêu thích"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/icon_cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/icon_cart"
            android:backgroundTint="#FFFFFF" />

        <View
            android:id="@+id/circle_red_cart"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/dashboard_circle_red" />

        <TextView
            android:id="@+id/number_cart"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <ListView
            android:id="@+id/listview_my_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
</LinearLayout>