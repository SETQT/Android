<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rectangle_password_authentication"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_password_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu"
        android:textSize="14sp"
        android:textColor="#F9A826"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        />
    <TextView
        android:id="@+id/text_describe_password_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/text_describe_password_authentication"
        android:textSize="12sp"
        />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/input_password_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:hint="Mật khẩu"
        android:paddingLeft="15dp"
        android:textSize="12dp"
        android:background="@drawable/input_password_authentication" />
    />

    <Button
        android:id="@+id/btn_send_password_authentication"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:text="Xác nhận"
        android:layout_gravity="end"
        android:background="@color/yellow"
        android:layout_marginBottom="20dp"
        />
    />
</LinearLayout>