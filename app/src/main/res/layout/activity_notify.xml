<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <View
        android:id="@+id/notify_rectangle_header"
        android:layout_width="414dp"
        android:layout_height="109dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/notify_bg_header" />

    <TextView
        android:id="@+id/notify_text_header"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thông báo"
        android:textColor="#F9A826"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/notify_ic_cart"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_cart"
        android:gravity="center" />

    <View
        android:id="@+id/notify_circle_red_cart"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="297dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/dashboard_circle_red"/>

    <TextView
        android:id="@+id/notify_number_cart"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <View
        android:id="@+id/notify_ic_chat"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_chat"
        android:backgroundTint="#E5A433"
        android:gravity="center" />

    <View
        android:id="@+id/notify_circle_red_chat"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="365dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/dashboard_circle_red" />

    <TextView
        android:id="@+id/notify_number_chat"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="367dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="10"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />


    <ListView
        android:id="@+id/notify_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="45dp" />

    <View
        android:id="@+id/notify_rectangle_footer"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="613dp"
        android:background="@drawable/dashboard_rectangle_footer" />

    <View
        android:id="@+id/dashboard_ic_home"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/icon_home"
        android:gravity="center" />

    <TextView
        android:id="@+id/notify_text_home"
        android:layout_width="31dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Home"
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="top"
        />

    <View
        android:id="@+id/dashboard_ic_scan"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="616dp"
        android:gravity="center"
        android:background="@drawable/icon_qrcode" />

    <TextView
        android:id="@+id/notify_text_scan"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="138dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Scan/Pay"
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="top"
        />

    <View
        android:id="@+id/dashboard_ic_notify"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/icon_notify"
        android:backgroundTint="#F9A826"
        android:gravity="center" />

    <TextView
        android:id="@+id/notify_text_notify"
        android:layout_width="52dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="240dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Thông báo"
        android:textColor="#F9A826"
        android:textSize="10sp"
        android:gravity="top"
        />

    <View
        android:id="@+id/dashboard_ic_profile"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/icon_profile"
        android:gravity="center" />

    <TextView
        android:id="@+id/notify_text_profile"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="344dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Tôi"
        android:textSize="10sp"
        android:gravity="top"
        />


</RelativeLayout>