<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout
        android:id="@+id/navCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"


        android:background="@color/background">


        <TextView
            android:id="@+id/txtCardTitle"
            android:layout_width="109dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Giỏ hàng"
            android:textColor="@color/textColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconChat"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="343dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/icon_circle"
            android:padding="10dp"

            android:scaleType="fitXY"
            android:src="@drawable/icon_chat"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberMes"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/txtCardTitle"
            android:background="@drawable/num_noti"
            android:text="51"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/arrow_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp"

            android:layout_marginTop="6dp"


            android:background="@drawable/ic_back"
            android:textColor="@color/textColor"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/list"
        android:layout_below="@+id/navCart"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <ListView
            android:id="@+id/idListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_below="@+id/list"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="16dp">


        <ImageView
            android:id="@+id/iconVoucher"
            android:layout_width="50dp"

            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_voucher_bg"


            android:gravity="center_vertical"


            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_ticket_solid" />

        <TextView
            android:id="@+id/txtVoucher"
            android:layout_width="113dp"
            android:layout_height="18.19dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"


            android:text="Voucher "

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtChoseVoucher"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical"


            android:text="Chon Voucher"

            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>