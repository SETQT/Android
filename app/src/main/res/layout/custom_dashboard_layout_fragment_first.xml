<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dashboard_layout_fragment_first"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="54dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dashboard_option_tatca"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/dashboard_rectangle_bg_white"
                android:gravity="center"
                android:text="Tất cả"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="14sp" />

            <Button
                android:id="@+id/dashboard_option_aokhoac"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/dashboard_rectangle_bg_white"
                android:gravity="center"
                android:text="Áo khoác"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="14sp" />

            <Button
                android:id="@+id/dashboard_option_mu"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/dashboard_rectangle_bg_white"
                android:gravity="center"
                android:text="Mũ"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="14sp" />

            <Button
                android:id="@+id/dashboard_option_quan"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/dashboard_rectangle_bg_white"
                android:gravity="center"
                android:text="Quần"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="14sp" />

            <Button
                android:id="@+id/dashboard_option_ao"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/dashboard_rectangle_bg_white"
                android:gravity="center"
                android:text="Áo"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="14sp" />


        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>