<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_mycart"
    android:background="#E5E5E5">

    <View
        android:id="@+id/dashboard_rectangle_header"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/dashboard_rectangle_footer" />

    <ImageView
        android:id="@+id/icon_logo"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/logo_nhom"
        android:gravity="center" />

    <View
        android:id="@+id/icon_cart"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/icon_cart"
        android:gravity="center" />

    <View
        android:id="@+id/dashboard_circle_red_cart"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dashboard_circle_red" />

    <TextView
        android:id="@+id/number_cart"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="297.5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <View
        android:id="@+id/icon_chat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/icon_chat"
        android:backgroundTint="#E5A433"
        android:gravity="center" />

    <View
        android:id="@+id/dashboard_circle_red_chat"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="363dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/dashboard_circle_red"
        />

    <TextView
        android:id="@+id/number_chat"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="364.5dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="10"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <View
        android:id="@+id/dashboard_frame_search"
        android:layout_width="376dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/dashboard_rectangle_search" />

    <EditText
        android:id="@+id/dashboard_id_search"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="62dp"
        android:gravity="left"
        android:hint="Tìm kiếm"
        android:textColor="#C6C6C6"
        android:textSize="16sp" />

    <View
        android:id="@+id/icon_search"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:background="@drawable/icon_search" />

    <FrameLayout
        android:id="@+id/dashboard_fragment_first"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical" />

    <FrameLayout android:id="@+id/dashboard_fragment_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="60dp"/>

    <View
        android:id="@+id/rectangle_footer"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="613dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/dashboard_rectangle_footer" />

    <RelativeLayout
        android:id="@+id/icon_home"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="42dp">

        <View
            android:id="@+id/dashboard_icon_home"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_home"
            android:backgroundTint="#F9A826"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="3dp"
            android:gravity="top"
            android:text="Home"
            android:textColor="#F9A826"
            android:textSize="10sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/icon_scan"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp">

        <View
            android:id="@+id/dashboard_icon_scan"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_qrcode"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_scan"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:gravity="top"
            android:text="Scan/Pay"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icon_notify"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="243dp">

        <View
            android:id="@+id/dashboard_icon_notify"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_notify"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_notify"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:gravity="top"
            android:text="Thông báo"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icon_profile"
        android:layout_width="26dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="340dp">
        <View
            android:id="@+id/dashboard_icon_profile"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_profile"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_profile"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="top"
            android:text="Tôi"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>

