<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E5E5E5">

    <View
        android:id="@+id/record_rectangle_header_profile"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-84dp"
        android:background="@drawable/record_rectangle_header_profile" />

    <View
        android:id="@+id/icon_back"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/icon_back"
        android:backgroundTint="#FFFFFF"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="30dp"
        android:gravity="top"
        android:text="Kho voucher"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/icon_cart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/icon_cart"
        android:backgroundTint="#FFFFFF" />

    <View
        android:id="@+id/voucher_circle_red_cart"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/dashboard_circle_red" />

    <TextView
        android:id="@+id/number_cart"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <View
        android:id="@+id/voucher_bg_option"
        android:layout_width="411dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/voucher_rectangle_option" />

    <TextView
        android:id="@+id/voucher_option_tat_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="94dp"
        android:gravity="top"
        android:text="Tất cả"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/voucher_option_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="95dp"
        android:gravity="top"
        android:text="Shop"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/voucher_option_mien_phi_van_chuyen"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="86dp"
        android:layout_marginRight="25dp"
        android:gravity="center_horizontal|top"
        android:text="Miễn phí vận chuyển"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/voucher_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="50dp" />


</RelativeLayout>