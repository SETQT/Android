<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login"
    android:clipToOutline="true"
    tools:context=".LoginActivity">
    >


    <View
        android:id="@+id/ellipse_1"
        android:layout_width="213dp"
        android:layout_height="213dp"
        android:background="@drawable/ellipse_1"
        android:translationX="-100dp"
        android:translationY="-50dp" />

    <View
        android:id="@+id/ellipse_2"
        android:layout_width="337dp"
        android:layout_height="337dp"
        android:background="@drawable/ellipse_2"
        android:translationX="-40dp"
        android:translationY="-250dp" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="149dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/rectangle_4" />

    <TextView
        android:id="@+id/dangnhap"
        android:layout_width="68dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="159dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/ng_nh_p"
        android:textAppearance="@style/ng_k_" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="149dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="194dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/rectangle_3" />


    <TextView
        android:id="@+id/dangki"
        android:layout_width="68dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="239dp"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/ng_k_"
        android:textAppearance="@style/ng_nh_p" />

    <EditText
        android:id="@+id/edittext_tk_dk"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="215dp"
        android:hint="Email/Số điện thoại/Tên đăng nhập"
        android:paddingLeft="45dp"
        android:textSize="16sp" />

    <View
        android:id="@+id/ic_person"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/ic_person" />

    <EditText
        android:id="@+id/edittext_mk_dk"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:hint="Mật khẩu"
        android:paddingLeft="45dp"
        android:textSize="16sp" />

    <View
        android:id="@+id/ic_lock"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/ic_lock"/>
    <View
        android:id="@+id/ic_eye"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/ic_eye"/>

    <EditText
        android:id="@+id/edittext_nhaplaimk"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="345dp"
        android:hint="Nhập lại mật khẩu"
        android:paddingLeft="45dp"
        android:textSize="16sp" />

    <View
        android:id="@+id/ic_lock_nlmk"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/ic_lock"/>
    <View
        android:id="@+id/ic_eye_nlmk"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/ic_eye"/>


    <Button
        android:id="@+id/btn_dangky"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/btn_default"
        android:gravity="center"
        android:text="Đăng ký"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/hoac_dk"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="490dp"
        android:gravity="center_vertical"
        android:text="@string/hoac"
        android:textAppearance="@style/m_t_kh_u"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btn_google_dk"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="530dp"
        android:paddingLeft="5dp"
        android:background="@drawable/tieptucgoogle"
        android:drawableLeft="@drawable/ic_google"
        android:gravity="center"
        android:text="Tiếp tục với google"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_facebook_dk"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/tieptucgoogle"
        android:drawableLeft="@drawable/ic_facebook"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Tiếp tục với facebook"
        android:textSize="14dp" />


</RelativeLayout>