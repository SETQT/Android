<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <View
        android:id="@+id/myorder_custom_frame_bg"
        android:layout_width="391dp"
        android:layout_height="147dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/myorder_custom_frame_bg" />

    <ImageView
        android:id="@+id/myorder_custom_picture"
        android:layout_width="89dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/myorder_custom_name"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/myorder_custom_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:text="Đánh giá"
        android:textColor="#FF0000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/myorder_custom_size"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="58dp"
        android:gravity="top"
        android:text="Size M, Đen"
        android:textColor="#AEAEAE"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/myorder_custom_count"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="331dp"
        android:layout_marginTop="58dp"
        android:gravity="top"
        android:text="Số lượng 1"
        android:textColor="#AEAEAE"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/myorder_custom_old_cost"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="277dp"
        android:layout_marginTop="89dp"
        android:foreground="@drawable/dashboard_custom_gridview_strikethrough"
        android:gravity="top"
        android:text="đ500.000"
        android:textColor="#AEAEAE"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/myorder_custom_new_cost"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="331dp"
        android:layout_marginTop="87dp"
        android:gravity="top"
        android:text="đ100.000"
        android:textColor="#F9A826"
        android:textSize="12sp" />

    <View
        android:id="@+id/myorder_custom_line"
        android:layout_width="381dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dashboard_custom_gridview_strikethrough" />

    <TextView
        android:id="@+id/myorder_custom_text"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="125dp"
        android:gravity="top"
        android:text="Thành tiền: "
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/myorder_custom_total"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="123dp"
        android:layout_marginRight="26dp"
        android:gravity="top"
        android:text="đ100.000"
        android:textColor="#F9A826"
        android:textSize="12sp" />


</RelativeLayout>