<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E5E5E5">

    <View
        android:id="@+id/rectangle_header"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_footer" />

    <ImageView
        android:id="@+id/ic_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:src="@drawable/icon_menu" />

    <ImageView
        android:id="@+id/ic_giohang"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:src="@drawable/icon_giohang" />

    <View
        android:id="@+id/circle_red_giohang"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="297dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_red"
        />

    <TextView
        android:id="@+id/id_giohang"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/ic_chat"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="343dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:src="@drawable/icon_chat" />

    <View
        android:id="@+id/circle_red_chat"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="363dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_red"
        />

    <TextView
        android:id="@+id/id_chat"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="364.5dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="10"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <View
        android:id="@+id/khung_timkiem"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/rectangle_search" />

    <EditText
        android:id="@+id/timkiem"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="62dp"
        android:gravity="left"
        android:hint="Tìm kiếm"
        android:textColor="#C6C6C6"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:src="@drawable/icon_timkiem" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/option_tatca"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_bg_orange"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Tất cả"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option_aokhoac"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_bg_white"
                android:gravity="center"
                android:text="Áo khoác"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option_mu"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_bg_white"
                android:gravity="center"
                android:text="Mũ"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option_quan"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_bg_white"
                android:gravity="center"
                android:text="Quần"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option_áo"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_bg_white"
                android:gravity="center"
                android:text="Áo"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option_giay"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_bg_white"
                android:gravity="center"
                android:text="Giày"
                android:textAllCaps="false"
                android:textColor="#AEAEAE"
                android:textSize="16sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="175dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <View
        android:id="@+id/rectangle_footer"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="613dp"
        android:background="@drawable/rectangle_footer" />

    <ImageView
        android:id="@+id/ic_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="616dp"
        android:gravity="center"
        android:src="@drawable/icon_home" />

    <TextView
        android:id="@+id/home"
        android:layout_width="31dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Home"
        android:textColor="#F9A826"
        android:textSize="10sp"
        android:gravity="top"
        />

    <ImageView
        android:id="@+id/ic_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="616dp"
        android:gravity="center"
        android:src="@drawable/icon_scan" />

    <TextView
        android:id="@+id/scan"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="138dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Scan/Pay"
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="top"
        />

    <ImageView
        android:id="@+id/ic_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="616dp"
        android:gravity="center"
        android:src="@drawable/icon_notify" />

    <TextView
        android:id="@+id/notify"
        android:layout_width="52dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="240dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Thông báo"
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="top"
        />

    <ImageView
        android:id="@+id/ic_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="616dp"
        android:gravity="center"
        android:src="@drawable/icon_profile" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="344dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="641dp"
        android:text="Tôi"
        android:textColor="#000000"
        android:textSize="10sp"
        android:gravity="top"
        />
</RelativeLayout>