<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/change_password"
    android:background="@drawable/login"
    android:clipToOutline="true"
    tools:context=".activity_change_password">

    <RelativeLayout
        android:id="@+id/header_change_password"
        android:layout_width="411dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/rectangle_payment"
        >
        <View
            android:id="@+id/ic_back_change_password"
            android:layout_width="21dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/ic_back_payment" />
        <TextView
            android:id="@+id/text_"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="139dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="53dp"
            android:text="Đổi mật khẩu"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="top"
            />

    </RelativeLayout>
    <EditText
        android:id="@+id/edittext_new_password"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:hint="Nhập mật khẩu mới"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:background="@drawable/edittext_new_password"
        />

    <EditText
        android:id="@+id/edittext_confirm_new_password"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:hint="Nhập lại mật khẩu mới"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:background="@drawable/edittext_new_password"
        />

    <View
        android:id="@+id/footer_change_password"
        android:layout_width="411dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_change_password"
        />

    <Button
        android:id="@+id/record_btn_save_profile"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/record_btn_save_profile"
        android:gravity="center"
        android:text="Lưu"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>